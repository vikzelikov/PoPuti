<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.getdriver.GetDriverView">


    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back_btn"
        android:elevation="12dp"
        android:padding="13dp"
        android:src="@drawable/back_arrow" />


    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/corners_layout"
        android:elevation="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:translationZ="5dp">


            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/input_marker_from" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/input_line" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/input_marker_to" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fromAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/roboto"
                        android:padding="10dp"
                        android:paddingStart="0dp"
                        android:singleLine="true"
                        android:text="Address 1"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="#30000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/toAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/roboto"
                        android:padding="10dp"
                        android:paddingStart="0dp"
                        android:singleLine="true"
                        android:text="Address 2"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="15dp"
            android:weightSum="1">


            <TextView
                android:id="@+id/offer_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_ruble"
                android:drawablePadding="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="25dp"
                android:text="@string/offer_price"
                android:textColor="#50000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/price_label_color"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:background="@drawable/offer_price_positive"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:visibility="gone" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#30000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
                android:id="@+id/selected_payment_method"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="23dp"
                android:paddingBottom="24dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/payment_method_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minWidth="40dp" />

                <TextView
                    android:id="@+id/number_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="5dp"
                    android:textColor="@android:color/black" />


            </LinearLayout>

            <TextView
                android:id="@+id/payment_method"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:drawableStart="@drawable/ic_payment_method"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto"
                android:gravity="center|start"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="24dp"
                android:text="@string/payment_method"
                android:textColor="@android:color/black" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comment_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingStart="18dp"
                    android:paddingTop="23dp"
                    android:paddingEnd="15dp"
                    android:text="@string/comment"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/comment_min_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:maxLines="1"
                    android:paddingStart="18dp"
                    android:paddingEnd="15dp"
                    android:singleLine="true"
                    android:textColor="#60000000"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/get_driver_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_style"
            android:fontFamily="@font/roboto"
            android:shadowColor="@color/colorBlue"
            android:text="@string/getdriver"
            android:textAllCaps="false"
            android:textSize="16sp" />


    </LinearLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/dynamic_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        tools:context="ui.dashboard.HomeFragment">


        <LinearLayout
            android:id="@+id/cards_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_layout"
            android:elevation="10dp"
            android:orientation="vertical"
            app:behavior_peekHeight="0dp"
            app:layout_behavior=".view.getdriver.MBottomSheet">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/bottom_sheet_arrow" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/payments_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/add_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:drawableEnd="@drawable/arrow_right"
                android:paddingStart="70dp"
                android:paddingTop="27dp"
                android:paddingBottom="27dp"
                android:text="@string/add_payment"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/comment_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="@drawable/corners_layout"
            android:elevation="10dp"
            android:orientation="vertical"
            android:padding="15dp"
            app:behavior_peekHeight="0dp"
            app:layout_behavior=".view.getdriver.MBottomSheet">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/comment_back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:src="@drawable/arrow_left" />


                <TextView
                    android:id="@+id/comment_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:text="@string/ready"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp" />


            </LinearLayout>


            <EditText
                android:id="@+id/comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:hint="@string/commentForDriver"
                android:inputType="textMultiLine"
                android:textColor="@android:color/black"
                android:textColorHint="#60000000"
                android:textCursorDrawable="@drawable/color_cursor" />


        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>
