<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_regular_ride_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_back_btn"
        android:elevation="12dp"
        android:padding="13dp"
        android:src="@drawable/ic_back_arrow" />


    <ImageView
        android:id="@+id/center_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingStart="2dp"
        android:paddingBottom="55dp"
        android:src="@drawable/ic_map_marker" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:behavior_peekHeight="225dp"
            app:layout_behavior="bonch.dev.poputi.presentation.base.MBottomSheet">


            <ImageButton
                android:id="@+id/show_route"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_back_btn"
                android:elevation="10dp"
                android:paddingEnd="1dp"
                android:src="@drawable/ic_show_route"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/show_my_position_c"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_back_btn"
                android:elevation="10dp"
                android:src="@drawable/ic_my_position" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_corners_layout"
                android:elevation="30dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_anchor_bottom_sheet" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic_input_marker_from" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/ic_input_line" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_input_marker_to" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/from_address"
                            android:layout_width="match_parent"
                            android:layout_height="62dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto"
                            android:gravity="center_vertical"
                            android:hint="@string/from"
                            android:maxLines="2"
                            android:paddingStart="0dp"
                            android:paddingEnd="10dp"
                            android:textAlignment="gravity"
                            android:textColor="@android:color/black"
                            android:textColorHint="#60000000"
                            android:textSize="16sp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="1dp"
                            android:background="#30000000" />


                        <TextView
                            android:id="@+id/to_address"
                            android:layout_width="match_parent"
                            android:layout_height="62dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto"
                            android:gravity="center_vertical"
                            android:hint="@string/to"
                            android:maxLines="2"
                            android:paddingStart="0dp"
                            android:paddingEnd="10dp"
                            android:textAlignment="gravity"
                            android:textColor="@android:color/black"
                            android:textColorHint="#60000000"
                            android:textSize="16sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="15dp"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/offer_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_ruble"
                        android:drawablePadding="20dp"
                        android:hint="@string/offer_price"
                        android:paddingTop="12dp"
                        android:paddingBottom="25dp"
                        android:textColor="#000000"
                        android:textColorHint="#50000000"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/info_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/white"
                        android:src="@drawable/ic_info_price"
                        android:visibility="gone" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#30000000" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/select_date"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="7dp"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="@string/selectDate"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/select_time"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="7dp"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="@string/selectTime"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#30000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <LinearLayout
                        android:id="@+id/selected_payment_method"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center|start"
                        android:orientation="horizontal"
                        android:paddingStart="15dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/payment_method_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:minWidth="40dp" />

                        <TextView
                            android:id="@+id/number_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto"
                            android:paddingStart="5dp"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/payment_method"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:drawableStart="@drawable/ic_payment_method"
                        android:drawablePadding="11dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center|start"
                        android:paddingStart="15dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="20dp"
                        android:text="@string/payment_method"
                        android:textColor="@android:color/black" />


                    <LinearLayout
                        android:id="@+id/comment_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:paddingEnd="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="21dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="end"
                            android:text="@string/comment"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/comment_min_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto"
                            android:gravity="end"
                            android:maxLines="1"
                            android:paddingStart="18dp"
                            android:singleLine="true"
                            android:textColor="#60000000"
                            android:textSize="13sp"
                            android:translationY="-5dp" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/save_ride"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_btn_gray"
                        android:clickable="false"
                        android:fontFamily="@font/roboto"
                        android:shadowColor="@color/colorBlue"
                        android:text="@string/saveC"
                        android:textAllCaps="false"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/progress_bar_btn"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:elevation="10dp"
                        android:theme="@style/WhiteProgressBar"
                        android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/container_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="60dp">

        <LinearLayout
            android:id="@+id/cards_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corners_layout"
            android:elevation="10dp"
            android:orientation="vertical"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="bonch.dev.poputi.presentation.base.MBottomSheet">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_bottom_sheet_arrow" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/payments_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/add_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:layout_marginStart="15dp"
                android:paddingTop="27dp"
                android:paddingBottom="27dp"
                android:text="@string/add_payment"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/select_time_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corners_layout"
            android:elevation="10dp"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="bonch.dev.poputi.presentation.base.MBottomSheet">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_bottom_sheet_arrow" />

            <com.github.florent37.singledateandtimepicker.SingleDateAndTimePicker
                android:id="@+id/picker_select_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="15dp"
                app:picker_curved="true"
                app:picker_displayDays="false"
                app:picker_displayDaysOfMonth="false"
                app:picker_displayHours="true"
                app:picker_displayMinutes="true"
                app:picker_displayMonth="false"
                app:picker_displayMonthNumbers="false"
                app:picker_displayYears="false"
                app:picker_itemSpacing="46dp"
                app:picker_selectorHeight="0dp"
                app:picker_stepSizeMinutes="5"
                app:picker_textSize="40sp"
                app:picker_visibleItemCount="5" />


            <Button
                android:id="@+id/save_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_btn_blue"
                android:fontFamily="@font/roboto"
                android:shadowColor="@color/colorBlue"
                android:text="@string/saveC"
                android:textAllCaps="false"
                android:textSize="16sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/select_date_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corners_layout"
            android:elevation="10dp"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="bonch.dev.poputi.presentation.base.MBottomSheet">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_bottom_sheet_arrow" />


            <TextView
                android:id="@+id/every_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/ic_tick"
                android:fontFamily="@font/roboto"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/everyDay"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/work_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/ic_tick"
                android:fontFamily="@font/roboto"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/workDays"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/select_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:drawableEnd="@drawable/ic_tick"
                android:fontFamily="@font/roboto"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/selectDays"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/comment_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:background="@drawable/bg_corners_layout"
            android:elevation="10dp"
            android:orientation="vertical"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="bonch.dev.poputi.presentation.base.MBottomSheet">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/comment_back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="50dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/ic_arrow_left" />


                <TextView
                    android:id="@+id/comment_done"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:padding="15dp"
                    android:text="@string/ready"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp" />


            </LinearLayout>


            <EditText
                android:id="@+id/comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:hint="@string/commentForDriver"
                android:inputType="textMultiLine"
                android:textColor="@android:color/black"
                android:textColorHint="#60000000"
                android:textCursorDrawable="@drawable/bg_color_cursor" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/bottom_sheet_addresses"
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:background="@drawable/bg_corners_layout"
            android:elevation="10dp"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="bonch.dev.poputi.presentation.base.MBottomSheet">


            <ImageView
                android:id="@+id/bottom_sheet_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/ic_bottom_sheet_arrow" />


            <LinearLayout
                android:id="@+id/main_addresses_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottom_sheet_arrow"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_inputs_layout"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:translationZ="7dp">


                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_input_marker_from" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:src="@drawable/ic_input_line" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_input_marker_to" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/from_adr"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/from"
                            android:inputType="textCapSentences|textMultiLine"
                            android:maxLines="2"
                            android:padding="5dp"
                            android:paddingStart="0dp"
                            android:textColor="@android:color/black"
                            android:textColorHint="#70000000"
                            android:textCursorDrawable="@drawable/bg_color_cursor"
                            android:textSize="16sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/from_cross" />


                        <ImageView
                            android:id="@+id/from_cross"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="0.5"
                            android:paddingStart="8dp"
                            android:paddingTop="13dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="12dp"
                            android:src="@drawable/ic_cross"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/btn_map_from"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/btn_map_from"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/bg_inputs_layout_map_btn"
                            android:gravity="center"
                            android:text="@string/map"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#30000000" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/to_adr"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/to"
                            android:imeOptions="actionDone"
                            android:inputType="textCapSentences"
                            android:maxLines="2"
                            android:padding="5dp"
                            android:paddingStart="0dp"
                            android:textColor="@android:color/black"
                            android:textColorHint="#70000000"
                            android:textCursorDrawable="@drawable/bg_color_cursor"
                            android:textSize="16sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/to_cross" />


                        <ImageView
                            android:id="@+id/to_cross"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="0.5"
                            android:paddingStart="8dp"
                            android:paddingTop="13dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="12dp"
                            android:src="@drawable/ic_cross"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/btn_map_to"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/btn_map_to"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/bg_inputs_layout_map_btn"
                            android:gravity="center"
                            android:text="@string/map"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/address_map_marker_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottom_sheet_arrow"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/show_my_position"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_back_btn"
                    android:elevation="10dp"
                    android:src="@drawable/ic_my_position" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_inputs_layout"
                    android:elevation="10dp"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:translationZ="5dp">


                    <ImageView
                        android:id="@+id/circle_marker"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/ic_input_marker_to" />


                    <TextView
                        android:id="@+id/address_map_text"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@null"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/roboto"
                        android:gravity="start|center"
                        android:padding="5dp"
                        android:paddingStart="0dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />


                </LinearLayout>

                <Button
                    android:id="@+id/address_map_marker_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_btn_black"
                    android:fontFamily="@font/roboto"
                    android:shadowColor="@color/colorBlue"
                    android:text="@string/ready"
                    android:textAllCaps="false"
                    android:textSize="16sp" />


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/addresses_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_addresses_layout"
                android:alpha="0.0" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/days_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corners_layout"
            android:elevation="10dp"
            android:orientation="vertical"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="bonch.dev.poputi.presentation.base.MBottomSheet">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_bottom_sheet_arrow" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mondey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_unselected_item"
                        android:fontFamily="@font/roboto"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:text="@string/monday"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tuesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_unselected_item"
                        android:fontFamily="@font/roboto"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:text="@string/tuesday"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/wednesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_unselected_item"
                        android:fontFamily="@font/roboto"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:text="@string/wednesday"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/thursday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_unselected_item"
                        android:fontFamily="@font/roboto"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:text="@string/thursday"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/friday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_unselected_item"
                        android:fontFamily="@font/roboto"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:text="@string/friday"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/saturday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_unselected_item"
                        android:fontFamily="@font/roboto"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:text="@string/saturday"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/sunday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_unselected_item"
                        android:fontFamily="@font/roboto"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:text="@string/sunday"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>


            </ScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="20dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/cancel_days"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.5"
                    android:alpha="0.5"
                    android:background="@drawable/bg_btn_gray"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="17dp"
                    android:paddingTop="17dp"
                    android:paddingEnd="17dp"
                    android:paddingBottom="17dp"
                    android:text="@string/cancelC"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/save_days"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_btn_blue"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="33dp"
                    android:paddingTop="17dp"
                    android:paddingEnd="33dp"
                    android:paddingBottom="17dp"
                    android:text="@string/saveC"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/info_price_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corners_layout"
            android:elevation="10dp"
            android:orientation="vertical"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="bonch.dev.poputi.presentation.base.MBottomSheet">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_bottom_sheet_arrow" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/tooLowPrice"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/roboto"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/recommendRisePrice"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <View
        android:id="@+id/on_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@android:color/black"
        android:elevation="50dp"
        android:visibility="gone" />

</RelativeLayout>