<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme is the default theme. -->
    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyAppTheme" parent="@style/Theme.Design.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="WhiteProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="@style/Theme.Design.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>



</resources>
